<%= render '/list', user: @user, book: @book %>
  <div class='col-md-8 offset-md-1'>
   <h2>Book detail</h2>
        <table class='table table-hover table-inverse'>
              <tr>
                  <th>
                    <%= link_to user_path(@book.user.id) do %>
                      <%= attachment_image_tag @book.user, :profile_image, :fill, 40, 40, format: 'jpeg', fallback: "no_image.jpg" %>
                    <% end %>
                    <p><%= link_to @book.user.name, user_path(@book.user.id) %></p>
                  </th>
                  <th>
                    <%= link_to @book.title, book_path(@book.id) %>
                  </th>
                  <th><%= @book.body %></th>
                  <% if @book.user.id == current_user.id %>
                  <th>
                    <%= link_to "Edit", edit_book_path(@book.id), class:"btn btn-success" %>
                  </th>
                  <th>
                    <%= link_to "Destroy", destroy_book_path(@book.id), method: :delete, class:"btn btn-danger", "data-confirm" => "本当に消しますか？" %>
                  </th>
                  <% end %>
              </tr>
        </table>
      </div>
    </div>
  </div>