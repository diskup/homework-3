<%= render '/list', user: @user, book: @book %>

    <div class='col-md-8 offset-md-1'>

      <h2>Book detail</h2>

        <table class='table table-hover table-inverse'>

          <tr>
            <td>
              <%= link_to user_path(@book.user.id) do %>
                <%= attachment_image_tag @book.user, :profile_image, :fill, 40, 40, format: 'jpeg', fallback: "no_image.jpg", size:'40x40' %>
              <% end %>
              <p><%= link_to @book.user.name, user_path(@book.user.id) %></p>
            </td>
            <td>
              <%= link_to @book.title, book_path(@book.id) %>
            </td>
            <td><%= @book.body %></td>
            <% if @book.user.id == current_user.id %>
              <td>
                <%= link_to "Edit", edit_book_path(@book.id), class:"btn btn-success" %>
              </td>
              <td>
                <%= link_to "Destroy", destroy_book_path(@book.id), method: :delete, class:"btn btn-danger", "data-confirm" => "本当に消しますか？" %>
              </td>
            <% end %>
          </tr>

        </table>

      </div>
<!----⬇️部分テンプレートの分>-->
    </div>
  </div>